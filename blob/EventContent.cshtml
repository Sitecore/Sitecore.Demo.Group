@using Sitecore.Feature.Events
@using Sitecore.Foundation.Alerts
@using Sitecore.Foundation.Alerts.Extensions
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Mvc
@model Sitecore.Mvc.Presentation.RenderingModel

@if (!Model?.Item?.DescendsFrom(Templates.Event.ID) ?? true)
{
  @Html.PageEditorError(AlertTexts.InvalidDataSourceTemplate(Templates.Event.ID), AlertTexts.InvalidDataSourceTemplateFriendlyMessage, Model.Item?.ID, Model.Rendering.Item?.ID)
  return;
}

<header>
  <h1>
    @Html.Sitecore().Field(Templates.Event.Fields.Title, Model.Item)
  </h1>
  <p>
    <time>@Html.Sitecore().Field(Templates.Event.Fields.Date.ToString(), Model.Item, new { format = "MMMM dd, yyyy" })</time>
  </p>
</header>
<div>
  @Html.Sitecore().Field(Templates.Event.Fields.Description, Model.Item)
</div>